<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/id_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#FFFFFF"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_recySuperheroe"
            android:layout_width="95dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:scaleType="fitEnd"
            android:src="@drawable/batman"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_nombreSuperheroe"
            android:layout_width="146dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="136dp"
            android:layout_toEndOf="@+id/iv_recySuperheroe"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_comicSuper"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nombreSuperheroe"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="3dp"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_fuerzasuperheroe"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comicSuper"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_edadSuperheroe"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comicSuper"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="6dp"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_latSuper"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comicSuper"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="39dp"
            android:layout_toEndOf="@+id/textView29"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_longSuper"
            android:layout_width="121dp"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_latSuper"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="41dp"
            android:layout_toEndOf="@+id/textView29"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="67dp"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_nombreSuperheroe"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/tv_comicSuper"
            android:layout_toEndOf="@+id/iv_recySuperheroe"
            android:text="Cómic:" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="67dp"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_nombreSuperheroe"
            android:layout_marginStart="23dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/tv_comicSuper"
            android:layout_toEndOf="@+id/iv_recySuperheroe"
            android:text="Fuerza:" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="67dp"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_nombreSuperheroe"
            android:layout_marginStart="23dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/tv_comicSuper"
            android:layout_toEndOf="@+id/iv_recySuperheroe"
            android:text="Edad:" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="70dp"
            android:layout_height="21dp"
            android:layout_below="@+id/tv_nombreSuperheroe"
            android:layout_marginStart="23dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/tv_comicSuper"
            android:layout_toEndOf="@+id/iv_recySuperheroe"
            android:text="Ubicación:" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>